<% layout('layouts/boilerplate')%>

<h1 class="text-black font-weight-bold">All Activities</h1>
<div>
    <a class = "btn btn-warning mb-3" href="/activities/new">Add Activity</a>
</div>
<% for (let activity of activities){%>
<div class="card" mb-3 style="background-color: #DFDFDF">
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%=activity.image%>">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= activity.title %> </h5>
                <p class="card-text"><%= activity.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= activity.location%></small>
                </p>
                <a class="btn btn-warning" href="/activities/<%=activity._id%>">View <%=activity.title%></a>
            </div>
        </div>
    </div>
</div>
<% }%>